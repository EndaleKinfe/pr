@model IEnumerable<pr.Models.Food>

@{
    ViewData["Title"] = "Food List";
}

<h2 class="text-center my-4">Food List</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Food</a>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Restaurant ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var food in Model)
        {
            <tr>
                <td>@food.Name</td>
                <td>@food.Description</td>
                <td>@food.Price</td>
                <td>@food.Category</td>
                <td>@food.RestaurantId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@food.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@food.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

