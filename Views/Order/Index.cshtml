@model IEnumerable<pr.Models.Order>

@{
    ViewData["Title"] = "Orders List";
}

<h2>Orders</h2>
<a asp-action="Create" class="btn btn-success mb-2">Create New Order</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Restaurant</th>
            <th>Food Items</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerId</td>
                <td>@order.RestaurantId</td>
                <td>@order.FoodId</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
